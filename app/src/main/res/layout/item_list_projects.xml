<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Pri1_Inke"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:background="@drawable/style_card"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:src="@drawable/openmoji_flag_indonesia"/>

        <!-- LinearLayout/ LinearLayout_Right-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name Project"
                android:textColor="@color/Accent_Wuito"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Job"
                android:textColor="@color/Accent_Grege"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Date"
                android:textColor="@color/Accent_Grege"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Open Project"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_medium"
                android:drawableRight="@drawable/ico_open_outlined"
                android:background="@drawable/style_btn"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>