<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Sec1_Sekok"
    android:gravity="center"
    tools:context="com.drxid.porto.load.LandingLoadingActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/img_loading_croodsprojector"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tunggu Sebentar"
            android:textColor="@color/Accent_Wuito"
            android:fontFamily="@font/poppins_bold"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sedang Memuat..."
            android:textColor="@color/Accent_Grege"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

</LinearLayout>