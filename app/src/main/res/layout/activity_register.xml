<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Pri1_Inke"
    tools:context=".RegisterActivity">

    <!--  Title & Subtitle  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="72dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Daftar"
            android:textAlignment="textStart"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp"
            android:textColor="@color/Accent_Wuito" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Daftar untuk Melanjutkan"
            android:textAlignment="textStart"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:textColor="@color/Accent_Wuito" />
    </LinearLayout>

    <!--  Edit Text: (1) Input Nama; (2) input E-Mail; (3) input Password  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_nama"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:background="@drawable/style_et"
            android:textColor="@color/Accent_Wuito"
            android:textColorHint="@color/Accent_Grege"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:padding="16dp"
            android:hint="Masukkan Nama"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/style_et"
            android:textColor="@color/Accent_Wuito"
            android:textColorHint="@color/Accent_Grege"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:padding="16dp"
            android:hint="Masukkan E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/style_et"
            android:textColor="@color/Accent_Wuito"
            android:textColorHint="@color/Accent_Grege"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:padding="16dp"
            android:hint="Masukkan Password"
            android:inputType="textPassword" />
    </LinearLayout>

    <!--  Button: Daftar  -->
    <!--  TextView: Masuk Sekarang  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="56dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/kebijakan"
            android:textColor="@color/Accent_Wuito"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:text="Daftar"
            android:background="@drawable/style_btn"
            android:layout_marginTop="16dp"
            />

        <Button
            android:id="@+id/btn_registertologin"
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:text="@string/masuk_sekarang"
            android:textColor="@color/Accent_Wuito"
            android:textAllCaps="false"
            android:background="#00FFFFFF"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>

</FrameLayout>