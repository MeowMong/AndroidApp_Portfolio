<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DrXID" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Pri2_Akwa</item>
        <item name="colorPrimaryVariant">@color/Accent_Grege</item>
        <item name="colorOnPrimary">@color/Accent_Wuito</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Pri2_Akwa</item>
        <item name="colorSecondaryVariant">@color/Sec2_Bruke</item>
        <item name="colorOnSecondary">@color/Pri1_Inke</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.DrXID.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.DrXID.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.DrXID.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>